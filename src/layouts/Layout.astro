---
import { ClientRouter } from 'astro:transitions'
import '../styles/base.css'

export interface Props {
  title?: string
  description?: string
}

const { title = 'cutesite', description = 'A cute and aesthetic personal website' } = Astro.props
const base = import.meta.env.BASE_URL ?? '/'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link href="https://fonts.googleapis.com/css2?family=Comic+Neue:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/fontawesome.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/brands.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/solid.min.css" />
    <title>{title}</title>
    <script src="https://unpkg.com/trianglify@^4/dist/trianglify.bundle.js"></script>
    <ClientRouter />
    <style>
      html, body {
        height: 100%;
        overflow: hidden;
      }
      body.blog-post-page {
        overflow: auto;
        background-color: var(--window-content-bg);
        position: relative;
        z-index: 1;
      }
      body.blog-post-page #trianglify-bg {
        display: none !important;
      }
    </style>
  </head>
  <body class={title !== 'cutesite' ? 'blog-post-page' : ''}>
    <slot />
    <canvas id="trianglify-bg" class="fixed inset-0 w-full h-full pointer-events-none z-0"></canvas>
    <script>
      import { initTheme } from '../stores/theme'
      import { initAudio } from '../stores/audio'
      import { initWindowManager } from '../hooks/useWindowManager'

      document.addEventListener('astro:page-load', () => {
        initTheme()
        initAudio()
        initWindowManager()
      })

      document.addEventListener('astro:after-swap', () => {
        initTheme()
      })
    </script>
  </body>
</html>